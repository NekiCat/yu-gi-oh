<Window x:Class="DeckBuilder.EffectEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalon="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
        xmlns:local="clr-namespace:DeckBuilder"
        mc:Ignorable="d"
        Title="EffectEditorWindow" Height="400" Width="500">
    <Grid>
        <avalon:TextEditor x:Name="textEditor" BorderThickness="1" BorderBrush="Silver" Margin="10,10,10,40" FontFamily="Courier New" ShowLineNumbers="True" Padding="10,0,0,0" />
        
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Click="OkButtonClick"/>
    </Grid>
</Window>

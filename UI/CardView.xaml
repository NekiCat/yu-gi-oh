<UserControl x:Class="TigeR.YuGiOh.UI.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:svg="clr-namespace:Svg2Xaml;assembly=Svg2Xaml"
             xmlns:local="clr-namespace:TigeR.YuGiOh.UI"
             xmlns:component="clr-namespace:TigeR.YuGiOh.UI.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="333" MouseMove="UserControl_MouseMove">
    <Viewbox>
        <Grid Height="8.6cm" Width="5.9cm">
            <Image Source="{Binding ImageSource}" RenderOptions.BitmapScalingMode="Fant"/>
        </Grid>
    </Viewbox>
</UserControl>
